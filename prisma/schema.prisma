// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Guild {
  id        String    @id
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  webhook   Webhook?
  messages  Message[]

  @@map("guilds")
}

model Webhook {
  id        String   @id
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  guild     Guild    @relation(fields: [guildId], references: [id])
  guildId   String   @unique
  token     String
  channelId String
  events    Int

  @@map("webhooks")
}

model Message {
  id             String   @id
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  guild          Guild    @relation(fields: [guildId], references: [id])
  guildId        String
  channelId      String
  authorId       String
  content        String?
  attachmentsB64 String[]

  @@map("messages")
}
